                                <li><a href="login.html">Login</a></li>
                                <li><a href="register.html">Register</a></li>*@
                            <!--</ul>
                                </div>
                                <ul style="padding:0;">
                                    <li style="position:relative; margin:0;">
                                        <a href="" class="basket"><i class="fa-solid fa-cart-shopping"></i></a>
