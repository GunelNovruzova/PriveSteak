@inject LayoutService layoutService
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject LayoutService layoutService
@inject IOptions<RequestLocalizationOptions> LocOptions
@inject IStringLocalizer<AccountController> Localizer
@inject IHtmlLocalizer<AccountController> HtmlLocalizer
@model LoginVM
@{
    string returnUrl = ViewContext.HttpContext.Request.Path;
    string currentCulture = ViewContext.HttpContext.Features.Get<IRequestCultureFeature>().RequestCulture.Culture.ToString();
    ViewBag.LoginTitle = Localizer["logintitle"];
    ViewBag.RegisterTitle = Localizer["registertitle"];
    ViewBag.ForgotTitle = Localizer["forgottitle"];

}
<form action="" method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <h3>@Html.Raw(ViewBag.LoginTitle)</h3>
    <hr>
    <div class="col-lg-12">
        <!-- <label for="">Email Address</label> -->
        <br>
        <input class="email formInp" asp-for="Email" placeholder="Email or Username" required />
    </div>
    <div class="col-lg-12">
        <!-- <label for="">Password</label> -->
        <br>
        <input class="password formInp" asp-for="Password" placeholder="Enter your Password" required />
        <!-- <label class="custom-control-label" for="rememberMe">Remember Me</label> -->
    </div>
    <div class=" row remmemberForgot">
        <div class="rememmbermeInp col-lg-6">
            @*<input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="rememberMe">
        <label for="remmeberme">Remember me</label>*@
            <a asp-controller="Account" asp-action="Register" class="forgotYourPassword col-lg-6">@Html.Raw(ViewBag.RegisterTitle)</a>
        </div>
        <a asp-controller="Account" asp-action="ResetPassword" class="forgotYourPassword col-lg-6">@Html.Raw(ViewBag.ForgotTitle)</a>
    </div>

    <button>@Html.Raw(ViewBag.LoginTitle)</button>

</form>
@section Script{
    <partial name="_ValidationFormScriptPartial">
}

