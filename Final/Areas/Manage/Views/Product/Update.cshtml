@model Product
@{
    ViewData["Title"] = "Update";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 h3 mb-4 text-gray-800">
                <h4>Product Update</h4>
            </div>
            <div class="col-lg-12 mx-auto">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" accept="image/png" asp-for="Name" placeholder="Enter Title">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NameAZ"></label>
                        <input class="form-control" asp-for="NameAZ" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="NameAZ"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NameRU"></label>
                        <input class="form-control" asp-for="NameRU" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="NameRU"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescriptionAZ"></label>
                        <input type="text" class="form-control" asp-for="DescriptionAZ" placeholder="Enter Description">
                        <span class="text-danger" asp-validation-for="DescriptionAZ"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescriptionRU"></label>
                        <input type="text" class="form-control" asp-for="DescriptionRU" placeholder="Enter Description">
                        <span class="text-danger" asp-validation-for="DescriptionRU"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price" placeholder="Enter Price">
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile"></label>
                        <input class="form-control" accept="image/jpeg" asp-for="ImageFile" placeholder="Enter MainImage">
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                        <select class="form-control" asp-for="CategoryId" asp-items="@new SelectList(ViewBag.Categories, nameof(Category.Id), nameof(Category.Name))">
                            <option value="" selected>Choose...</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>





